{
  "compilerOptions": {
    "target": "es6",
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "./public",
    "rootDir": "./src",
    "jsx": "react",
    "strict": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictPropertyInitialization": true,
    "alwaysStrict": true
  },
  "includes": ["./src"]
}

